import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;

public class ComboBoxSample extends Application {
    public static void main(String[] args) {
        launch(args);
    }

    final Button button = new Button ("Tilføj");

    String address = " ";

    @Override public void start(Stage stage) {
        stage.setTitle("Valg af stue");
        Scene scene = new Scene(new Group(), 250, 125);

        final ComboBox roomComboBox = new ComboBox();
        roomComboBox.getItems().addAll(
                "Løvestuen",
                "Tigerstuen",
                "Bjørnestuen"
        );

        GridPane grid = new GridPane();
        grid.setVgap(4);
        grid.setHgap(10);
        grid.setPadding(new Insets(5, 5, 5, 5));
        grid.add(new Label("Vælg Stue: "), 0, 0);
        grid.add(roomComboBox, 1, 0);
        grid.add(button, 3, 0);

        Group root = (Group)scene.getRoot();
        root.getChildren().add(grid);
        stage.setScene(scene);
        stage.show();
    }
}
